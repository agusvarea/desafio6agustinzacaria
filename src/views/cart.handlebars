<div class="cartContainer">
    <div class="cartHeader">
        <h1>Carrito de compras</h1>
    </div>
    <div class="cartContent">
        <div class="cartContentHeaderItem">
            <p>Producto</p>
        </div>
        <div class="cartContentHeaderItem">
            <p>Precio</p>
        </div>
        <div class="cartContentHeaderItem">
            <p>Cantidad</p>
        </div>
        <div class="cartContentHeaderItem subtotal">
            <p>Subtotal</p>
        </div>  
    </div>
    <div class="cartContentBody">
        {{#each products}}
        <div class="cartContentBodyItem">
            <div class="cartContentBodyItemImg">
                <img src="{{this.product.imageUrl}}" />
            </div>
            <div class="cartContentBodyItemName">
                <p>{{this.product.name}}</p>
            </div>
            <div class="cartContentBodyItemPrice">
                <p>$ {{this.product.price}}</p>
            </div>
            <div class="cartContentBodyItemQuantity">
                <button  onclick="minus('{{this.product._id}}')">
                    -
                </button>
                <p>{{this.quantity}} uds</p>
                <button  onclick="plus('{{this.product._id}}')">
                    +
                </button>
            </div>
            <div class="cartContentBodyItemSubtotal">
                <p>$ 10000</p>
            </div>
        </div>
        {{/each}}
    </div> 
</div>

<script src="/js/carts.js"></script>