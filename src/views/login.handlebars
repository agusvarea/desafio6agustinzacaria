<div class="login-container">
    <form id="login-form" class="login-form">
        <h2>Iniciar sesión</h2>
        <div class="form-group">

            <label for="username">Usuario:</label>
            <input type="text" id="email" name="username" required />
        </div>
        <div class="form-group">

            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required />

        </div>
        <button id="login" type="submit">Ingresar</button>
    </form>
    <a href="/forgot" class="forgot-link">¿Olvidaste tu contraseña?</a><br/><br/> 
    <p>¿No tenés cuenta? <a href="/signup" class="signup-link">Registrate aquí.</a></p>

    <div>
        <a href="/githubcallback" class="github-link">
            <button>Entrar con github</button>
        </a>
    </div>
</div>
<script src="js/login.js"></script>