<div style="display: flex;">
    <form id="add" style="flex: 1;">
        <h3>Agregar producto:</h3>
        <div>
            <label>Name:</label>
            <input type="text" id="name" />
        </div>
        <div>
            <label>Description:</label>
            <textarea id="description"></textarea>
        </div>
        <div>
            <label>Price:</label>
            <input type="text" id="price" />
        </div>
        <div>
            <label>ImageUrl:</label>
            <input type="text" id="imageUrl" />
        </div>
        <div>
            <label>Code:</label>
            <input type="text" id="code" />
        </div>
        <div>
            <label>Category:</label>
            <input type="text" id="category" />
        </div>
        <div>
            <label>Stock:</label>
            <input type="text" id="stock" />
        </div>
        <button id="addProductBtn" type="button">Add Product</button>
    </form>

    <form id="delete" style="flex: 1; margin-left: 20px;">
        <div class="welcome-message">{{welcomeMessage}} <span class="logout" id="logout">Logout</span></div>
        <h3>Eliminar producto:</h3>
        <label>Product ID:</label>
        <input type="text" id="productId" />

        <button id="deleteProductBtn" type="button">Delete Product</button>
    </form>
</div>

<div class="productList realtime">
    {{#each products}}
    <div class="productCard realtime">
        <div class="cardProduct__image">
            <img src="{{this.imageUrl}}" alt="{{this.name}}" />
        </div>
        <div class="cardProduct__info">

            <h3>{{this.name}}</h3>
            <p>{{this.description}}</p>
            <p>$ {{this.price}}</p>
            <p>{{this.code}}</p>
            <p>{{this.category}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>{{this.id}}</p>
        </div>
        <div class="deleteContainer">
            <div class="deleteProduct deleteButton" id={{this.id}}>X</div>
        </div>
    </div>
    {{/each}}
</div>
<div class="paginationContainer">
    {{#if hasPrevPage}}
    <a class="prev" href="/realtime?page={{prevPage}}"><button class="pagination-button">Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
    <a class="next" href="/realtime?page={{nextPage}}"><button class="pagination-button">Siguiente</button></a>
    {{/if}}
</div>

<script src="js/logout.js"></script>